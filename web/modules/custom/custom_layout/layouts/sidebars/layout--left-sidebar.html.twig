{#
/**
 * @file
 * Default theme implementation to display a left sidebar layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}

{%
  set row_classes = [
    'l-grid',
    'l-grid--sidebar-left',
  ]
%}

{% if content %}
  <div class="l-container">
    <div{{ attributes.addClass( row_classes|join(' ') ) }}>

      {% if content.sidebar %}
        <div {{ region_attributes.sidebar.addClass('l-grid__sidebar l-sidebar') }}>
          {{ content.sidebar }}
        </div>
      {% endif %}

      {% if content.main %}
        <div {{ region_attributes.main.addClass('l-grid__main l-main') }}>
          {{ content.main }}
        </div>
      {% endif %}

    </div>
  </div>
{% endif %}
