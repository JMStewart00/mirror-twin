{{ attach_library('easy_responsive_images/resizer') }}

{% set file = media.field_media_image.entity %}
{% set src = file.uri.value|image_url('responsive_16_9_350w') %}
{% set srcset = [
  file.uri.value|image_url('responsive_16_9_550w')|render ~ ' 550w',
  file.uri.value|image_url('responsive_16_9_750w')|render ~ ' 750w',
  file.uri.value|image_url('responsive_16_9_950w')|render ~ ' 950w',
  file.uri.value|image_url('responsive_16_9_1150w')|render ~ ' 1150w',
  file.uri.value|image_url('responsive_16_9_1350w')|render ~ ' 1350w',
  file.uri.value|image_url('responsive_16_9_1550w')|render ~ ' 1550w',
  file.uri.value|image_url('responsive_16_9_1750w')|render ~ ' 1750w',
  file.uri.value|image_url('responsive_16_9_1950w')|render ~ ' 1950w',
  file.uri.value|image_url('responsive_16_9_2150w')|render ~ ' 2150w',
  file.uri.value|image_url('responsive_16_9_2350w')|render ~ ' 2350w'
] %}
<img class="o-img--16-9" src="{{ src }}" data-srcset="{{ srcset|join(',') }}" alt="{{ media.field_media_image.alt }}" loading="lazy" />
