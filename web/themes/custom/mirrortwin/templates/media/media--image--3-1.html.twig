{{ attach_library('easy_responsive_images/resizer') }}

{% set file = media.field_media_image.entity %}
{% set src = file.uri.value|image_url('responsive_3_1_350w') %}
{% set srcset = [
  file.uri.value|image_url('responsive_3_1_550w')|render ~ ' 550w',
  file.uri.value|image_url('responsive_3_1_750w')|render ~ ' 750w',
  file.uri.value|image_url('responsive_3_1_950w')|render ~ ' 950w',
  file.uri.value|image_url('responsive_3_1_1150w')|render ~ ' 1150w',
  file.uri.value|image_url('responsive_3_1_1350w')|render ~ ' 1350w',
] %}
<img class="o-img--3-1" src="{{ src }}" data-srcset="{{ srcset|join(',') }}" alt="{{ media.field_media_image.alt }}" loading="lazy" />
