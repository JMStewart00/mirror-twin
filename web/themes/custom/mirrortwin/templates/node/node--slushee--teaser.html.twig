{%
  set classes = [
    'c-teaser',
    'c-' ~ node.bundle|clean_class ~ '-' ~ view_mode|clean_class,
    'columns small-12 medium-4 large-4'
  ]
%}

<div{{attributes.addClass(classes)}} data-aos="fade-up">
  {{ title_prefix }}
  {{ title_suffix }}

  <div class="c-slushee-teaser__title h3">
    {{ label.0['#context'].value }}
  </div>

  <div class="c-slushee-teaser__price">
    {{ content.field_price }}
  </div>
  <div class="c-slushee-teaser__ingredients">
    {{ content.field_ingredients }}
  </div>
</div>



