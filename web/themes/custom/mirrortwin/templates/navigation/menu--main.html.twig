{#
/**
 * @file
 * Theme override to display a menu.
 *
 * Available variables:
 * - menu_name: The machine name of the menu.
 * - items: A nested list of menu items. Each menu item contains:
 *   - attributes: HTML attributes for the menu item.
 *   - below: The menu item child items.
 *   - title: The menu link title.
 *   - url: The menu link url, instance of \Drupal\Core\Url
 *   - localized_options: Menu link localized options.
 */
#}
{% import _self as menus %}

{#
  We call a macro which calls itself to render the full tree.
  @see http://twig.sensiolabs.org/doc/tags/macro.html
#}

  <div {{ top_bar_attributes }} style="width: 100vw;">
    <nav class="top-bar" id="main-menu" role="navigation" data-animate>
      <div class="top-bar-left">
        {{ menus.menu_links(items, attributes, 0, 'first') }}
      </div>
      <div class="top-bar-middle">
        <a href="{{ path('<front>') }}" rel="home" class="site-logo">
          <img src="/{{ base_path ~ directory }}/logo.svg" alt="{{ 'Home'|t }}" />
        </a>
      </div>
      <div class="top-bar-right">
        {{ menus.menu_links(items, attributes, 0, 'second') }}
      </div>
    </nav>
  </div>


{% macro menu_links(items, attributes, menu_level, half) %}
  {% import _self as menus %}

  {% set itemsCount = (items|length / 2)|round(1, 'ceil') %}
  {% if half == 'first' %}
    {% set newItems = items|slice(0, itemsCount) %}
  {% elseif half == 'second' %}
    {% set newItems = items|slice(itemsCount) %}
  {% else %}
    {% set newItems = items %}
  {% endif %}

  {% if newItems %}
    {% if menu_level == 0 %}
      <ul{{ attributes.addClass('dropdown', 'menu') }} data-dropdown-menu>
    {% else %}
      <ul class="menu">
    {% endif %}

    {% for item in newItems %}
      <li{{ item.attributes.addClass(item_classes) }}>
        {{ link(item.title, item.url) }}
        {% if item.below %}
          {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
        {% endif %}
      </li>
    {% endfor %}
    </ul>
  {% endif %}
{% endmacro %}
