{#
/**
 * @file
 * Two column template for the checkout form.
 *
 * Available variables:
 * - form: The form.
 *
 * @ingroup themeable
 */
#}
<div class="l-container u-vr__my--4 u-vr__px--2">
  <div class="u-vr__mb--2">
    <a href="/cart"><i class="fas fa-shopping-cart o-icon--blue fa-2x"></i> Back to my cart</a>
  </div>
  <div class="c-checkout-form clearfix">
    <div class="c-checkout-form__main">
      {{ form|without('sidebar', 'actions') }}
    </div>
    <div class="c-checkout-form__secondary u-vr__mb--2">
      <h3 class="u-vr__mb--1">{% trans %} Order Summary {% endtrans %}</h3>
      {{ form.sidebar }}
    </div>
    <div class="c-checkout-form__footer">
      {{ form.actions }}
    </div>
  </div>
</div>
