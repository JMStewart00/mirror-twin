{%
  set classes = [
    'marketing-site-hero',
  ]
%}

{% set background_url = file_url(content.field_background_image[0]['#media'].field_media_image.entity.uri.value) %}


<div{{ attributes.addClass(classes) }} style="background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url({{ background_url }})">
  {{ title_prefix }}
  {{ title_suffix }}
  <div class="marketing-site-hero-content {{'marketing-site-hero-content--' ~ content.field_text_position.0['#markup']}}">
    {% if content.body|render %}
      {{ content.body }}
    {% endif %}
    {% if content.field_link.0 %}
      <a href="{{ content.field_link.0['#url'] }}" title="{{ content.field_link.0['#title'] }}" class="o-btn o-btn--primary o-btn--large o-btn--square u-vr__mt--1">
        {{ content.field_link.0['#title'] }}
      </a>
    {% endif %}
  </div>
</div>


